{{- $experience := $.Site.Data.experience -}}
<figure>
    <table>
        <tbody>
        {{- range $experience -}}
            <tr>
                <th>
                    {{- with .from -}}
                        {{- with .month -}}
                            {{- printf "%02d" . -}}/
                        {{-  end -}}
                        {{- .year -}}
                    {{- end -}}
                    &nbsp;-&nbsp;
                    {{- with .to -}}
                        {{- with .month -}}
                            {{- printf "%02d" . -}}/
                        {{-  end -}}
                        {{- .year -}}
                    {{- else -}}
                        {{ i18n "today" }}
                    {{- end -}}
                </th>
                <td>
                    {{- with .company -}}
                        <a href="{{- .url -}}" rel="noreferrer" target="_blank">
                            {{- .name -}}
                        </a><br>
                    {{-  end -}}
                    {{- if reflect.IsMap .job -}}
                        {{- i18n .job.i18n -}}
                    {{- else -}}
                        {{- .job -}}
                    {{- end -}}
                </td>
            </tr>
        {{- end -}}
        </tbody>
    </table>
</figure>
